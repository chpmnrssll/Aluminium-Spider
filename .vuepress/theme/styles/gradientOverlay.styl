.gradientOverlay
  &::before
    background radial-gradient(circle at top, $color-gradient-start, $color-gradient-end)
    content ''
    height $headerHeight
    left 0
    mix-blend-mode lighten
    opacity .5
    position absolute
    top 0
    width 100vw
    z-index -2
  &::after
    background radial-gradient(circle at top, $color-gradient-start, $color-gradient-end)
    content ''
    height $headerHeight
    left 0
    opacity .5
    mix-blend-mode color
    position absolute
    top 0
    width 100vw
    z-index -1
